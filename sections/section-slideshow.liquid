    {
      "type": "range",
      "id": "heading_size",
      "label": "Size",
      "default": 150,
      "min": 100,
      "max": 200,
      "step": 10,
      "unit": "%"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "2048px width recommended"
        },
