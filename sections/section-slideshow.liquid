        },
        {
          "type": "color",
          "id": "highlight_text_color",
          "label": "Text color",
          "default": "#000"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Add more info or delete this text"
        },
        {
          "type": "header",
          "content": "Button 1"
        },
        {
          "type": "text",
          "id": "button_1_text",
